<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Document</title>
  </head>
  <body class="bg-zinc-900" >
    <div class="w-full h-full  p-10 text-white">
      <a class="text-blue-500" href="/">Go To Home</a>
      <h1 class="text-3xl tracking-lighter mt-10 mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(Users.length>0){%>
          <% Users.forEach((user)=>{%>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
              <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                <img class="w-full h-full object-full object-cover" src="<%=user.image%>">
              </div>
              <h3 class="text-xl mt-3 tracking-lighter"><%=user.name%></h3>
              <h5 class="text-zinc-500"><%=user.email%></h5>
              <div class="flex-gap-3 mt-10">
                <a class="text-zinc-200" href="/delete/<%= user._id %>">Delete User</a>
                <a class="text-red-500" href="/edit/<%= user.id%>">Edit User</a>
              </div>
            </div>

        <%})%>
      


        <%}else{%>
          <h3 class="text-zinc-500 mt-5">No users to read</h3>
        <%}%>
       
        
        
        
      </div>
    </div>
  </body>
</html>
